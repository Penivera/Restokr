# ReStockr API - Environment Configuration

# Project Info
PROJECT_NAME=ReStockr Early Access API
VERSION=1.0.0
DESCRIPTION=Hyper-local restocking platform - Early Access signup system

# Database Configuration (PostgreSQL + PostGIS)
DATABASE_URL=postgresql+asyncpg://postgres:admin@localhost/restokr
DATABASE_ECHO=false

# Admin Authentication
ADMIN_USERNAME=admin
ADMIN_PASSWORD=changeme123

# Email Configuration (Gmail SMTP example)
# For Gmail: Enable "App Passwords" in your Google account security settings
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM_EMAIL=noreply@restockr.ng
SMTP_FROM_NAME=ReStockr Team

# Phone Validation
DEFAULT_COUNTRY_CODE=+234

# CORS Origins (comma-separated, or use default in code)
# CORS_ORIGINS=["http://localhost:3000","http://localhost:5173","https://re-stockr.vercel.app"]

# Pagination
DEFAULT_PAGE_SIZE=50
MAX_PAGE_SIZE=500
